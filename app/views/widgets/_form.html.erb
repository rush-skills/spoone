<%= simple_form_for(@widget) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :restaurant %>
    <%= f.input :half %>
    <%= f.input :position %>
    <%= f.input :widget_klass %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
